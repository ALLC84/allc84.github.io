---
import { Image } from 'astro:assets';
import GithubIcon from '@assets/images/github.svg';
---

<!-- Status bar left items -->
<a
  href="https://github.com/ALLC84"
  target="_blank"
  rel="noreferrer"
  class="status-item"
  aria-label="GitHub repository"
>
  <Image src={GithubIcon} alt="" width="12" height="12" class="status-icon" aria-hidden="true" />
  <span>GitHub</span>
</a>

<a
  href="/CV-Alejandro-Llorente.pdf"
  target="_blank"
  rel="noreferrer"
  download="CV-Alejandro-Llorente.pdf"
  class="status-item"
  aria-label="Download CV PDF"
>
  <span class="dl-icon" aria-hidden="true">â¬‡</span>
  <span>Download CV</span>
</a>

<style>
.status-item {
  display: flex;
  align-items: center;
  gap: 4px;
  padding: 0 6px;
  height: var(--statusbar-height);
  color: var(--text-inverted);
  text-decoration: none;
  font-size: var(--font-size-xs);
  font-weight: var(--font-weight-medium);
  transition: background var(--transition-fast);
  white-space: nowrap;
}
.status-item:hover {
  background: rgba(0, 0, 0, 0.15);
}

.status-icon {
  filter: brightness(0);
  opacity: 0.8;
  width: 12px;
  height: 12px;
}

.dl-icon { font-size: 10px; }
</style>
