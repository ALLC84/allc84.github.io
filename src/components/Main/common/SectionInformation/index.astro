---
import ModalStadyTitle from './Modal/index.astro';

interface sectionInformationData {
  title: string;
  subtitle: string;
  year: number;
  url?: string;
  image?: object;
  alt?: string;
}
interface Props {
  data: sectionInformationData[];
  widthButton?: Boolean
};
const show = 4;
const { data, widthButton = data?.length >= show } = Astro.props;
const random = Math.floor(Math.random() * 10000)
const base = data[0].title.replace(/[^a-zA-Z0-9]/g, '');
const currentId = `${base}-${random}`;
const TEXT_BUTTON = {
  showLess: 'Mostrar menos',
  showMore: 'Mostrar m√°s'
}
---

<!-- INFORMATION -->
<div class="info-list">
{
  data.map((information, index) => (
    <div class:list={['info-item', 'fadeIn', `section-${currentId}`, { 'no-display': index >= show }]}>
      <div class="info-main">
        <h4 class="info-title">
          { information.url ? 
            <a 
              href={information.url} 
              target="_blank"
              rel="noreferrer"
              class="info-link"
            >
              { information.title }
            </a> 
          : <span>
              { information.title }
            </span> 
          }

          {
            information.image && <ModalStadyTitle
              url={information.image}
              alt={information.alt}
            />
          }
        </h4>
        <p class="info-subtitle">{ information.subtitle }</p>
      </div>
      <div class="info-year">{ information.year }</div>
    </div>
  ))
}
</div>

<!-- BUTTON -->
{
  widthButton && (
  <div class="button-container">
    <button id={`button-${currentId}`} class="show-more-btn">
      { TEXT_BUTTON.showMore }
    </button>
  </div>
  )
}

<script define:vars={{currentId, TEXT_BUTTON, show}}>
  const button = document.getElementById(`button-${currentId}`);
  const sections = document.querySelectorAll(`.section-${currentId}`);
  
  const toggleDisplay = () =>{
    sections.forEach((section, index) => {
      if (index >= show) {
        section.classList.toggle('no-display');
      }
    });

    if (button.textContent.trim() === TEXT_BUTTON.showLess) {
      button.textContent = TEXT_BUTTON.showMore
    } else {
      button.textContent = TEXT_BUTTON.showLess
    }
  }
  if ( button ) {
    button.addEventListener("click", toggleDisplay);
  }
</script>


<style>
.info-list {
  display: flex;
  flex-direction: column;
  gap: var(--space-md);
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding-bottom: var(--space-md);
  border-bottom: 1px solid var(--border-color);
  transition: opacity 0.3s ease;
}

.info-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.info-main {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.info-title {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-bold);
  color: var(--text-main);
  display: flex;
  align-items: center;
  gap: var(--space-sm);
  flex-wrap: wrap;
}

.info-link {
  color: var(--text-main);
  text-decoration: none;
  transition: color var(--transition-fast);
}

.info-link:hover {
  color: var(--accent-primary);
}

.info-subtitle {
  font-size: var(--font-size-base);
  color: var(--text-muted);
}

.info-year {
  font-family: var(--font-family-mono, monospace);
  font-size: var(--font-size-sm);
  color: var(--accent-secondary);
  font-weight: var(--font-weight-bold);
  background: rgba(255, 255, 255, 0.05);
  padding: 4px 8px;
  border-radius: 4px;
}

.button-container {
  margin-top: var(--space-md);
  display: flex;
  justify-content: center;
}

.show-more-btn {
  background: transparent;
  border: 1px solid var(--border-color);
  color: var(--text-muted);
  padding: 8px 16px;
  border-radius: 20px;
  font-size: var(--font-size-sm);
  cursor: pointer;
  transition: all var(--transition-fast);
}

.show-more-btn:hover {
  border-color: var(--accent-primary);
  color: var(--accent-primary);
  background: rgba(99, 102, 241, 0.1);
}

.no-display {
  opacity: 0;
  display: none;
}

.fadeIn {
  animation: fadeIn 0.5s ease-in-out forwards;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}
</style>