---
interface Skill {
  name: string;
  level: number;
}
interface Props {
  skills: Skill[];
}
const { skills } = Astro.props;

// +1 para incluir el ":" dentro del ancho fijo → colon pegado al nombre
const maxNameLen = Math.max(...skills.map(s => s.name.toLowerCase().length)) + 1;

const levelToBlocks = (level: number): string => {
  const filled = '█'.repeat(level);
  const empty  = '░'.repeat(5 - level);
  return filled + empty;
};

const levelColor = (level: number) => {
  if (level >= 4) return 'var(--accent-green)';
  if (level >= 3) return 'var(--accent-secondary)';
  return 'var(--accent-tertiary)';
};
---

<div class="skill-code">
  {
    skills.map(skill => (
      <div class="skill-line">
        <span class="tk-prop sk-name" style={`min-width: ${maxNameLen}ch`}>{skill.name.toLowerCase()}<span class="tk-punct">:</span></span>
        <span class="sk-bar" style={`color: ${levelColor(skill.level)}`}>
          {levelToBlocks(skill.level)}
        </span>
        <span class="sk-num"> {skill.level}/5</span>
      </div>
    ))
  }
</div>

<style>
.skill-code {
  display: flex;
  flex-direction: column;
  gap: 3px;
  font-size: var(--font-size-xs);
}

.skill-line {
  display: flex;
  align-items: center;
  gap: 0;
  padding: 2px var(--space-sm);
  border-radius: 2px;
  white-space: pre;
  transition: background var(--transition-fast);
}
.skill-line:hover {
  background: var(--bg-sidebar-hover);
}

.sk-name {
  display: inline-block;
  /* min-width se aplica dinámicamente desde el frontmatter */
}

.sk-bar {
  font-size: 11px;
  letter-spacing: -1px;
}

.sk-num {
  color: var(--dr-comment);
  opacity: 0.7;
  font-style: normal;
}
</style>
