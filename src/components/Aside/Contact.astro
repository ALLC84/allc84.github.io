---
import contactData from '@data/contact.js';
---

<div class="contact-code">
  <!-- email -->
  <a
    class="contact-entry"
    href={`mailto:${contactData.mail.email}`}
    title={contactData.mail.title}
  >
    <span class="tk-prop">email</span>
    <span class="tk-punct">: </span>
    <span class="tk-str email-val">{contactData.mail.email}</span>
  </a>

  <!-- linkedin -->
  <a
    class="contact-entry"
    href={contactData.linkedin.url}
    target="_blank"
    rel="noreferrer"
    title={contactData.linkedin.title}
  >
    <span class="tk-prop">linkedin</span>
    <span class="tk-punct">: </span>
    <span class="tk-str link-val">{contactData.linkedin.title}</span>
    <span class="ext-icon" aria-hidden="true">â†—</span>
  </a>
</div>

<style>
.contact-code {
  display: flex;
  flex-direction: column;
  gap: 3px;
  font-size: var(--font-size-xs);
}

.contact-entry {
  display: flex;
  align-items: center;
  gap: 0;
  padding: 4px var(--space-sm);
  border-radius: 3px;
  transition: background var(--transition-fast);
  color: inherit;
  text-decoration: none;
  flex-wrap: wrap;
}
.contact-entry:hover {
  background: var(--bg-sidebar-hover);
}

.email-val {
  font-size: 10px;
  word-break: break-all;
}

.link-val {
  color: var(--dr-cyan);
}

.ext-icon {
  margin-left: 3px;
  font-size: 9px;
  color: var(--text-muted);
  opacity: 0.6;
}
</style>
