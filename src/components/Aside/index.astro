---
import Avatar from './Avatar.astro';
import Contact from './Contact.astro';
import SkillLevel from './SkillLevel.astro';

import skillsData from '@data/skills.json';
import skillsTechData from '@data/skillsTech.json';
import languageData from '@data/language.json';

const sections = [
  { file: 'skills.ts',        icon: 'üìÑ', data: skillsData },
  { file: 'technologies.ts',  icon: 'üìÑ', data: skillsTechData },
  { file: 'languages.ts',     icon: 'üìÑ', data: languageData },
];
---

<div class="file-tree">

  <!-- Root folder -->
  <div class="tree-folder tree-folder--open">
    <span class="folder-arrow">‚ñº</span>
    <span class="folder-icon">üìÅ</span>
    <span class="folder-name">alejandro-llorente</span>
  </div>

  <!-- Avatar / profile node -->
  <div class="tree-node">
    <Avatar />
  </div>

  <!-- contact.ts -->
  <div class="tree-file">
    <span class="file-bullet"></span>
    <span class="file-icon ts-badge">TS</span>
    <span class="file-name">contact.ts</span>
  </div>
  <div class="tree-node-content">
    <Contact />
  </div>

  <!-- skill files -->
  {
    sections.map(section => (
      <div>
        <div class="tree-file">
          <span class="file-bullet"></span>
          <span class="file-icon ts-badge">TS</span>
          <span class="file-name">{section.file}</span>
        </div>
        <div class="tree-node-content">
          <div class="skill-label">
            <span class="tk-cm">// {section.data.name.toLowerCase()}</span>
          </div>
          <SkillLevel skills={section.data.values} />
        </div>
      </div>
    ))
  }

</div>

<style>
.file-tree {
  padding: var(--space-xs) 0;
  font-size: var(--font-size-sm);
}

/* Folder row */
.tree-folder {
  display: flex;
  align-items: center;
  gap: 5px;
  padding: 4px var(--space-md);
  cursor: default;
  user-select: none;
  color: var(--text-main);
  font-weight: var(--font-weight-medium);
}
.folder-arrow {
  font-size: 9px;
  color: var(--text-muted);
  width: 10px;
}
.folder-icon { font-size: 13px; }
.folder-name { color: var(--dr-fg); }

/* File row */
.tree-file {
  display: flex;
  align-items: center;
  gap: 5px;
  padding: 3px var(--space-md);
  padding-left: calc(var(--space-md) + 18px);
  cursor: pointer;
  color: var(--text-muted);
  transition: background var(--transition-fast), color var(--transition-fast);
  border-left: 2px solid transparent;
}
.tree-file:hover {
  background: var(--bg-sidebar-hover);
  color: var(--text-main);
}
.file-bullet {
  display: inline-block;
  width: 4px;
  height: 4px;
  border-radius: 50%;
  background: var(--text-muted);
  flex-shrink: 0;
}
.ts-badge {
  font-size: 8px;
  font-weight: var(--font-weight-bold);
  background: #3178c6;
  color: #fff;
  padding: 1px 3px;
  border-radius: 2px;
  line-height: 1.4;
  flex-shrink: 0;
}
.file-name {
  color: var(--dr-cyan);
  font-size: var(--font-size-sm);
}

/* Content indented under a file */
.tree-node-content {
  padding-left: calc(var(--space-md) + 18px);
  padding-bottom: var(--space-sm);
}

/* Avatar node ‚Äì full bleed within sidebar */
.tree-node {
  padding: var(--space-sm) var(--space-md);
  display: flex;
  justify-content: center;
}

/* Skill section label */
.skill-label {
  padding: 2px 0 4px;
  font-style: italic;
  font-size: var(--font-size-xs);
}
</style>
